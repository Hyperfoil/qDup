<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.hyperfoil.tools.qdup.Local" level="DEBUG"/>
    <logger name="io.hyperfoil.tools.qdup.cmd.Dispatcher" level="INFO"/>
    <logger name="qdup.run.state" level="INFO"/>
    <logger name="org.apache.sshd" level="INFO"/>
    <logger name="org.apache.hc" level="INFO"/>
    <logger name="com.github.dockerjava.zerodep.shaded.org.apache.hc" level="INFO"/>
    <logger name="com.jayway.jsonpath.internal.path.CompiledPath" level="INFO"/>
    <logger name="org.testcontainers" level="INFO"/>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>